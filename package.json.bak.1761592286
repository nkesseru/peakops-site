{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --env-file=.env functions/server.mjs",
    "dev": "pkill -f node || true && node --env-file=.env functions/server.mjs"
    "dev:admin": "GOOGLE_APPLICATION_CREDENTIALS=\"$PWD/service-account.json\" next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "check": "tsc --noEmit",
    "turbo": "next dev --turbo",
    "seed": "node scripts/seedFirestore.mjs",
    "functions:build": "cd ingest-fns && npm run build",
    "functions:deploy": "cd ingest-fns && npm run build && firebase deploy --only functions",
    "functions:deploy:ping": "cd ingest-fns && npm run build && firebase deploy --only functions:ping",
    "functions:deploy:ingest": "cd ingest-fns && npm run build && firebase deploy --only functions:ingestEmail,functions:enqueueOcrJob,functions:runOcrWorker,functions:ingestDocText,functions:gmailWebhook",
    "stop-ports": "lsof -iTCP:8081 -sTCP:LISTEN -nP | awk 'NR>1{print $2}' | xargs -I{} kill -9 {} 2>/dev/null || true",
    "deploy:db": "firebase deploy --only firestore:rules,firestore:indexes"
  },
  "engines": {
    "node": ">=18.18 <23"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "firebase": "^12.2.1",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "5.1.1",
    "framer-motion": "^12.23.12",
    "google-auth-library": "^10.3.0",
    "helmet": "^8.1.0",
    "json-logic-js": "2.0.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.1",
    "next-themes": "^0.4.6",
    "pdfkit": "^0.17.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-next": "15.5.1",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
